{
    "app-id" : "org.gnome.Rygel",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "40",
    "sdk" : "org.gnome.Sdk",
    "command" : "rygel",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--talk-name=org.gtk.vfs",
        "--talk-name=org.gtk.vfs.*",
        "--filesystem=xdg-pictures",
        "--filesystem=xdg-videos",
        "--filesystem=xdg-music",
        "--own-name=org.gnome.Rygel1"
    ],
    "build-options" : {
        "cflags" : "-O2 -g",
        "cxxflags" : "-O2 -g",
        "env" : {
            "V" : "1"
        }
    },
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name" : "gssdp",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/GNOME/gssdp.git/"
                }
            ]
        },
        {
            "name" : "gupnp",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/GNOME/gupnp.git/"
                }
            ]
        },
        {
            "name" : "gupnp-av",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/GNOME/gupnp-av.git/"
                }
            ]
        },
        {
            "name" : "gupnp-dlna",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/GNOME/gupnp-dlna.git/"
                }
            ]
        },
        {
            "name" : "libmediaart",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/GNOME/libmediaart.git/"
                }
            ]
        },
        {
            "name": "gst-editing-services",
            "buildsystem": "meson",
            "builddir": true,
            "config-opts": [
                "-Ddoc=disabled"
            ],
            "sources": [
                {
                    "type": "git",
                    "branch": "1.16.3",
                    "url": "https://gitlab.freedesktop.org/gstreamer/gst-editing-services.git",
                    "commit" : "c96045555266a22a48be3465cfdeeb877fcae2b2"
                }
            ]
        },
        {
            "name" : "rygel",
            "buildsystem" : "meson",
            "config-opts" : [
                "--libdir=lib"
            ],
            "builddir" : true,
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/GNOME/rygel.git/"
                }
            ]
        }
    ]
}
